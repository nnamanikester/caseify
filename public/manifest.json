{
  "name": "Caseify",
  "version": "1.0.0",
  "description": "Easily transform your texts to desired cases.",
  "manifest_version": 3,
  "author": "John Nnamani",
  "action": {
    "default_popup": "index.html",
    "default_title": "Caseify - Easily Transform Texts",
    "default_icon": "./images/icon32.png"
  },
  "permissions": ["clipboardRead", "clipboardWrite"],
  "icons": {
    "16": "./images/icon16.png",
    "32": "./images/icon32.png",
    "128": "./images/icon128.png"
  }
}